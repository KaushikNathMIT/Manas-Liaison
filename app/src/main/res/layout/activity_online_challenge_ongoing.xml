<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_ongoing_ol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.projectmanas.manasliaison.activities.OnlineChallengeOngoing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label_ol_ongoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Online Challenge"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_label_ongoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label_ol_ongoing"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:text="Ongoing"
            android:textColor="#00ff00" />

        <TextView
            android:id="@+id/tv_label_days_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label_ongoing"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:text="Days Countdown"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/tv_ol_days_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label_days_countdown"
            android:gravity="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_reg_hacker_rank"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Link to Online Challenge" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
